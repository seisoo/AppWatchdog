<Page
    x:Class="AppWatchdog.UI.WPF.Views.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:AppWatchdog.UI.WPF.Common"
    xmlns:loc="clr-namespace:AppWatchdog.UI.WPF.Localization"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{x:Static loc:AppStrings.about}">

    <Grid>
        <StackPanel Margin="16" VerticalAlignment="Top">

            <ui:Card
                Height="154"
                Margin="0,0,0,12"
                Padding="0">
                <Grid>

                    <Image Source="pack://application:,,,/Images/banner5.png" Stretch="UniformToFill" />

                    <Rectangle>
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#AA000000" />
                                <GradientStop Offset="1" Color="#AA000000" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <StackPanel Margin="24,36,24,36" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="26"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="AppWatchdog" />

                        <TextBlock
                            Margin="0,10,0,0"
                            Foreground="#E5E7EB"
                            Text="天網恢恢、疎にして漏らさず" />
                    </StackPanel>

                </Grid>
            </ui:Card>

            <ui:Card Padding="16">
                <StackPanel>

                    <TextBlock
                        Margin="0,0,0,8"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="{x:Static loc:AppStrings.about_section_service_title}" />

                    <TextBlock Text="{x:Static loc:AppStrings.about_service_description_1}" TextWrapping="Wrap" />

                    <TextBlock
                        Margin="0,14,0,0"
                        Text="{x:Static loc:AppStrings.about_service_description_2}"
                        TextWrapping="Wrap" />

                    <StackPanel Margin="0,14,0,0">

                        <TextBlock FontWeight="SemiBold" Text="{x:Static loc:AppStrings.about_feature_mail_title}" />

                        <TextBlock
                            Margin="12,2,0,12"
                            Text="{x:Static loc:AppStrings.about_feature_mail_text}"
                            TextWrapping="Wrap" />

                        <TextBlock FontWeight="SemiBold" Text="{x:Static loc:AppStrings.about_feature_ntfy_title}" />

                        <TextBlock
                            Margin="12,2,0,12"
                            Text="{x:Static loc:AppStrings.about_feature_ntfy_text}"
                            TextWrapping="Wrap" />

                        <TextBlock FontWeight="SemiBold" Text="{x:Static loc:AppStrings.about_feature_uptime_title}" />

                        <TextBlock
                            Margin="12,2,0,0"
                            Text="{x:Static loc:AppStrings.about_feature_uptime_text}"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <Separator Margin="0,12" />

                    <ui:TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="{x:Static loc:AppStrings.about_section_contact_title}" />

                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                        <ui:Anchor Margin="0,0,5,0" NavigateUri="{x:Static common:AppLinks.Mail}">
                            <TextBlock Text="{x:Static loc:AppStrings.about_contact_email}" />
                        </ui:Anchor>

                        <ui:Anchor Margin="0,0,10,0" NavigateUri="{x:Static common:AppLinks.GitHub}">
                            <TextBlock Text="{x:Static loc:AppStrings.about_contact_github}" />
                        </ui:Anchor>

                        <ui:Anchor Margin="0,0,10,0" NavigateUri="{x:Static common:AppLinks.Steam}">
                            <TextBlock Text="{x:Static loc:AppStrings.about_contact_steam}" />
                        </ui:Anchor>
                    </StackPanel>

                    <Separator Margin="0,12" />

                    <WrapPanel>
                        <TextBlock Text="{x:Static loc:AppStrings.about_version_label}" />
                        <TextBlock>
                            <Run Text=" V." />
                            <Run Text="{x:Static common:AppInfo.Version}" />
                        </TextBlock>
                    </WrapPanel>

                    <TextBlock Margin="0,2,0,0" FontWeight="SemiBold">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="© {0} seiso">
                                <Binding Path="Now.Year" Source="{x:Static sys:DateTime.Now}" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>

                    <TextBlock
                        Margin="0,10,0,5"
                        Opacity="0.85"
                        Text="{x:Static loc:AppStrings.about_external_resources_title}" />

                    <ui:Anchor Margin="0,0,0,5" NavigateUri="{x:Static common:AppLinks.WpfUi}">
                        <TextBlock Text="{x:Static loc:AppStrings.about_external_wpfui}" />
                    </ui:Anchor>

                    <ui:Anchor NavigateUri="{x:Static common:AppLinks.Unsplash}">
                        <TextBlock Text="{x:Static loc:AppStrings.about_external_assets}" />
                    </ui:Anchor>

                </StackPanel>
            </ui:Card>

        </StackPanel>
    </Grid>
</Page>
