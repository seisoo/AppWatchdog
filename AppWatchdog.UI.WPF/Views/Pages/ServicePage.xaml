<Page
    x:Class="AppWatchdog.UI.WPF.Views.Pages.ServicePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:loc="clr-namespace:AppWatchdog.UI.WPF.Localization"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    MinWidth="800">

    <Grid Margin="0,16,0,0" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  HEADER CARD  -->
        <ui:Card
            Grid.Row="1"
            Margin="16,0,16,0"
            Padding="20">
            <StackPanel>
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <ui:SymbolIcon
                        Margin="0,0,12,0"
                        FontSize="32"
                        Symbol="Settings24" />
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            FontSize="24"
                            FontWeight="Bold"
                            Text="{Binding Source={StaticResource Strings}, Path=[service_title]}" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="12"
                            Opacity="0.6"
                            Text="{Binding Source={StaticResource Strings}, Path=[service_description]}" />
                    </StackPanel>
                </StackPanel>

                <!--  ACTION BUTTONS  -->
                <WrapPanel Margin="0,16,0,0">
                    <ui:Button
                        Margin="0,0,8,0"
                        Appearance="Success"
                        Command="{Binding StartServiceCommand}"
                        Content="{Binding Source={StaticResource Strings}, Path=[service_button_start]}"
                        Icon="{ui:SymbolIcon Symbol=Play24}" />

                    <ui:Button
                        Margin="0,0,8,0"
                        Appearance="Danger"
                        Command="{Binding StopServiceCommand}"
                        Content="{Binding Source={StaticResource Strings}, Path=[service_button_stop]}"
                        Icon="{ui:SymbolIcon Symbol=Stop24}" />

                    <ui:Button
                        Margin="0,0,8,0"
                        Appearance="Caution"
                        Command="{Binding ReinstallServiceCommand}"
                        Content="{Binding Source={StaticResource Strings}, Path=[service_button_reinstall]}"
                        Icon="{ui:SymbolIcon Symbol=ArrowSync24}" />
                </WrapPanel>
            </StackPanel>
        </ui:Card>

        <!--  MAIN CONTENT  -->
        <Grid Grid.Row="2" Margin="16,16,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  LEFT COLUMN: STATUS & SYSTEM INFO  -->
            <ScrollViewer
                Grid.Column="0"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Auto"
                CanContentScroll="False">
                <StackPanel>
                    <!--  STATUS SECTION  -->
                    <ui:Card Margin="0,0,0,16" Padding="16">
                        <Grid VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0">
                                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                    <ui:SymbolIcon
                                        Margin="0,0,8,0"
                                        FontSize="18"
                                        Symbol="Pulse24" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="{Binding Source={StaticResource Strings}, Path=[service_status_title]}" />
                                </StackPanel>
                                <Separator Margin="0,8,0,12" />
                            </StackPanel>

                            <!--  STATUS GRID  -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Opacity="0.6" Text="{Binding Source={StaticResource Strings}, Path=[service_state]}" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    FontWeight="SemiBold"
                                    Text="{Binding ServiceStateText}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Margin="0,8,0,0"
                                    Opacity="0.6"
                                    Text="{Binding Source={StaticResource Strings}, Path=[service_snapshot_time]}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="12,8,0,0"
                                    Text="{Binding SnapshotTimestamp}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Margin="0,8,0,0"
                                    Opacity="0.6"
                                    Text="{Binding Source={StaticResource Strings}, Path=[service_session]}" />
                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="12,8,0,0"
                                    Text="{Binding SessionStateText}" />

                                <TextBlock
                                    Grid.Row="3"
                                    Margin="0,8,0,0"
                                    Opacity="0.6"
                                    Text="{Binding Source={StaticResource Strings}, Path=[service_apps_summary]}" />
                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="12,8,0,0"
                                    Text="{Binding AppsSummaryText}" />
                            </Grid>
                        </Grid>
                    </ui:Card>

                    <!--  SYSTEM INFO SECTION  -->
                    <ui:Card Padding="16">
                        <Grid VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0">
                                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                    <ui:SymbolIcon
                                        Margin="0,0,8,0"
                                        FontSize="18"
                                        Symbol="Info24" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="{Binding Source={StaticResource Strings}, Path=[service_systeminfo_title]}" />
                                </StackPanel>
                                <Separator Margin="0,8,0,12" />
                            </StackPanel>

                            <!--  SYSTEM INFO GRID  -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Opacity="0.6" Text="{Binding Source={StaticResource Strings}, Path=[service_username]}" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    Text="{Binding Username}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Margin="0,8,0,0"
                                    Opacity="0.6"
                                    Text="{Binding Source={StaticResource Strings}, Path=[service_machine_name]}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="12,8,0,0"
                                    Text="{Binding MachineName}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Margin="0,8,0,0"
                                    Opacity="0.6"
                                    Text="{Binding Source={StaticResource Strings}, Path=[service_os]}" />
                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="12,8,0,0"
                                    Text="{Binding OsVersion}" />

                                <TextBlock
                                    Grid.Row="3"
                                    Margin="0,8,0,0"
                                    Opacity="0.6"
                                    Text="{Binding Source={StaticResource Strings}, Path=[service_dotnet]}" />
                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="12,8,0,0"
                                    Text="{Binding DotNetVersion}" />

                                <TextBlock
                                    Grid.Row="4"
                                    Margin="0,8,0,0"
                                    Opacity="0.6"
                                    Text="{Binding Source={StaticResource Strings}, Path=[service_uptime]}" />
                                <TextBlock
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Margin="12,8,0,0"
                                    Text="{Binding Uptime}" />

                                <TextBlock
                                    Grid.Row="5"
                                    Margin="0,8,0,0"
                                    Opacity="0.6"
                                    Text="{Binding Source={StaticResource Strings}, Path=[service_memory]}" />
                                <TextBlock
                                    Grid.Row="5"
                                    Grid.Column="1"
                                    Margin="12,8,0,0"
                                    Text="{Binding MemoryInfo}" />

                                <TextBlock
                                    Grid.Row="6"
                                    Margin="0,8,0,0"
                                    Opacity="0.6"
                                    Text="{Binding Source={StaticResource Strings}, Path=[language]}" />
                                <TextBlock
                                    Grid.Row="6"
                                    Grid.Column="1"
                                    Margin="12,8,0,0"
                                    Text="{Binding LanguageSelector.SelectedLanguage.DisplayName}" />
                            </Grid>
                        </Grid>
                    </ui:Card>
                </StackPanel>
            </ScrollViewer>

            <!--  RIGHT COLUMN: ACTIVE APPS  -->
            <ui:Card
                Grid.Column="2"
                Padding="16"
                VerticalAlignment="Top">

                <Grid VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  HEADER  -->
                    <StackPanel Grid.Row="0">
                        <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                            <ui:SymbolIcon
                                Margin="0,0,8,0"
                                FontSize="18"
                                Symbol="Checkmark24" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="{Binding Source={StaticResource Strings}, Path=[service_active_apps_title]}" />
                        </StackPanel>
                        <Separator Margin="0,8" />
                    </StackPanel>

                    <!--  APPS LIST  -->
                    <ScrollViewer
                        Grid.Row="1"
                        HorizontalScrollBarVisibility="Disabled"
                        VerticalScrollBarVisibility="Auto"
                        CanContentScroll="False">
                        <StackPanel VerticalAlignment="Top">
                            <TextBlock
                                Margin="0,0,0,16"
                                Opacity="0.6"
                                Text="{Binding Source={StaticResource Strings}, Path=[service_no_active_apps]}"
                                TextWrapping="Wrap"
                                Visibility="{Binding HasNoEnabledApps, Converter={StaticResource BoolToVisibilityConverter}}" />

                            <ItemsControl ItemsSource="{Binding EnabledApps}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="0,0,0,8"
                                            Padding="12,8"
                                            Background="{DynamicResource CardBackgroundBrush}"
                                            BorderBrush="{DynamicResource CardBorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock FontWeight="SemiBold" Text="{Binding Name}" />
                                                    <TextBlock
                                                        Margin="0,2,0,0"
                                                        FontSize="11"
                                                        Opacity="0.6"
                                                        Text="{Binding ExePath}"
                                                        TextTrimming="CharacterEllipsis" />
                                                </StackPanel>

                                                <Border
                                                    Grid.Column="1"
                                                    Height="24"
                                                    Margin="12,0,0,0"
                                                    Padding="8,4"
                                                    Background="{Binding IsRunning, Converter={StaticResource IsRunningToBrushConverter}}"
                                                    CornerRadius="4">
                                                    <TextBlock
                                                        VerticalAlignment="Center"
                                                        FontSize="11"
                                                        FontWeight="SemiBold"
                                                        Foreground="White"
                                                        Text="{Binding IsRunning, StringFormat='{}{0}'}" />
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </ui:Card>
        </Grid>
    </Grid>
</Page>
