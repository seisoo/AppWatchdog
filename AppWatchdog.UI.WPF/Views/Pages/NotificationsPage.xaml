<Page
    x:Class="AppWatchdog.UI.WPF.Views.Pages.NotificationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:AppWatchdog.UI.WPF.Common"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Notifications">

    <Grid IsEnabled="{Binding IsContentEnabled}">
        <StackPanel Margin="16" VerticalAlignment="Top">

            <ui:Card
                Height="154"
                Margin="0,0,0,12"
                Padding="0">
                <Grid>

                    <Image Source="pack://application:,,,/Images/banner5.png" Stretch="UniformToFill" />

                    <Rectangle>
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0.0" Color="#AA000000" />
                                <GradientStop Offset="1.0" Color="#AA000000" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <StackPanel Margin="24,36,24,36" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="26"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="AppWatchdog" />

                        <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,12,0"
                                Foreground="#E5E7EB"
                                Text="天網恢恢、疎にして漏らさず" />
                        </StackPanel>
                    </StackPanel>

                </Grid>
            </ui:Card>

            <ui:Card Margin="0,0,0,12" Padding="16">
                <StackPanel>

                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Benachrichtigungen" />

                    <TextBlock
                        Margin="0,6,0,12"
                        Opacity="0.7"
                        Text="Hier konfigurieren Sie die Benachrichtigungswege des AppWatchdog. SMTP eignet sich für klassische Status-E-Mails, NTFY für schnelle Push-Benachrichtigungen."
                        TextWrapping="Wrap" />

                    <WrapPanel>


                        <ui:Button
                            Margin="0,0,8,0"
                            Command="{Binding TestSmtpCommand}"
                            Content="SMTP Test"
                            Icon="{ui:SymbolIcon Symbol=Mail24}" />

                        <ui:Button
                            Margin="0,0,12,0"
                            Command="{Binding TestNtfyCommand}"
                            Content="NTFY Test"
                            Icon="{ui:SymbolIcon Symbol=Send24}" />
                        <ui:Button
                            Margin="0,0,12,0"
                            Appearance="Primary"
                            Command="{Binding SaveCommand}"
                            Content="Speichern"
                            Icon="{ui:SymbolIcon Symbol=Save24}"
                            IsEnabled="{Binding IsDirty}" />

                    </WrapPanel>

                    <TextBlock
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontFamily="Consolas"
                        Foreground="NavajoWhite"
                        Text="{Binding SaveStateText}" />
                </StackPanel>
            </ui:Card>


            <ui:Card Margin="0,0,0,12" Padding="16">
                <StackPanel>
                    <StackPanel
                        Margin="0,0,0,10"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                        <ui:SymbolIcon
                            FontSize="19"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Symbol="Mail24" />
                        <TextBlock
                            Margin="5,0,0,0"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="E-Mail (SMTP)" />
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,0,8"
                            Text="Server" />
                        <TextBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,0,0,8"
                            Text="{Binding SmtpServer, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,0,8"
                            Text="Port" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,0,0,8"
                            Text="{Binding SmtpPortText, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,0,0,8"
                            Text="SSL aktiv" />
                        <CheckBox
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="-10,0,0,8"
                            IsChecked="{Binding SmtpEnableSsl, Mode=TwoWay}" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,0,0,8"
                            Text="Benutzer" />
                        <TextBox
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="0,0,0,8"
                            Text="{Binding SmtpUser, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="0,0,0,8"
                            Text="Passwort" />
                        <PasswordBox
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="0,0,0,8"
                            PasswordChanged="SmtpPasswordChanged" />

                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="0"
                            Margin="0,0,0,8"
                            Text="Absender (From)" />
                        <TextBox
                            Grid.Row="5"
                            Grid.Column="1"
                            Margin="0,0,0,8"
                            Text="{Binding SmtpFrom, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="0"
                            Margin="0,0,0,8"
                            Text="Empfänger (To)" />
                        <TextBox
                            Grid.Row="6"
                            Grid.Column="1"
                            Margin="0,0,0,8"
                            Text="{Binding SmtpTo, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                </StackPanel>
            </ui:Card>


            <ui:Card Padding="16">
                <StackPanel>
                    <StackPanel
                        Margin="0,0,0,0"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">

                        <ui:SymbolIcon
                            Margin="0,-10,5,0"
                            FontSize="16"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Symbol="Send24" />

                        <TextBlock
                            Margin="0,0,0,12"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="NTFY" />
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,0,8"
                            Text="Aktiviert" />
                        <CheckBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="-10,0,0,8"
                            IsChecked="{Binding NtfyEnabled}" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,0,8"
                            Text="Base URL" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,0,0,8"
                            Text="{Binding NtfyBaseUrl, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,0,0,8"
                            Text="Topic" />
                        <TextBox
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,0,0,8"
                            Text="{Binding NtfyTopic, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,0,0,8"
                            Text="Token" />
                        <PasswordBox
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="0,0,0,8"
                            PasswordChanged="NtfyTokenChanged" />

                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="0,0,0,8"
                            Text="Priorität (1–5)" />
                        <TextBox
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="0,0,0,8"
                            Text="{Binding NtfyPriorityText, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                </StackPanel>
            </ui:Card>

        </StackPanel>
    </Grid>
</Page>
