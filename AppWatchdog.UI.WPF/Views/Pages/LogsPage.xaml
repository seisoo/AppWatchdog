<Page
    x:Class="AppWatchdog.UI.WPF.Views.Pages.LogsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:AppWatchdog.UI.WPF.Common"
    xmlns:conv="clr-namespace:AppWatchdog.UI.WPF.Converters"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    MinWidth="800">

    <Page.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
    </Page.Resources>

    <Grid VerticalAlignment="Stretch" IsEnabled="{Binding IsContentEnabled}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  HEADER CARD  -->
        <ui:Card
            Grid.Row="0"
            Margin="16,16,16,0"
            Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <ui:SymbolIcon
                        Margin="0,0,12,0"
                        FontSize="32"
                        Symbol="DocumentText24" />
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            FontSize="24"
                            FontWeight="Bold"
                            Text="{Binding Source={StaticResource Strings}, Path=[logs_title], Mode=OneWay}" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="12"
                            Opacity="0.6"
                            Text="{Binding Source={StaticResource Strings}, Path=[logs_description], Mode=OneWay}" />
                    </StackPanel>
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                    <WrapPanel HorizontalAlignment="Right">
                        <ui:Button
                            Margin="0,0,12,0"
                            Command="{Binding RefreshLogsCommand}"
                            Content="{Binding Source={StaticResource Strings}, Path=[logs_refresh], Mode=OneWay}"
                            Icon="{ui:SymbolIcon Symbol=ArrowClockwise24}" />

                        <ui:Button
                            Margin="0,0,12,0"
                            Appearance="Primary"
                            Command="{Binding OpenConfigFolderCommand}"
                            Content="{Binding Source={StaticResource Strings}, Path=[logs_open_folder], Mode=OneWay}"
                            Icon="{ui:SymbolIcon Symbol=Folder24}" />

                        <ui:ProgressRing
                            Width="24"
                            Height="24"
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            IsIndeterminate="True"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </WrapPanel>
                </StackPanel>
            </Grid>
        </ui:Card>

        <!--  MAIN CONTENT GRID  -->
        <Grid Grid.Row="1" Margin="16,16,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" MinWidth="400" />
            </Grid.ColumnDefinitions>

            <!--  LEFT COLUMN: LOG DAYS & SEARCH  -->
            <ScrollViewer
                Grid.Column="0"
                CanContentScroll="False"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!--  LOG DAYS  -->
                    <ui:Card Margin="0,0,0,12" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="240" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0">
                                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                    <ui:SymbolIcon
                                        Margin="0,0,8,0"
                                        FontSize="18"
                                        Symbol="Calendar24" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="{Binding Source={StaticResource Strings}, Path=[logs_available_title], Mode=OneWay}" />
                                </StackPanel>
                                <TextBlock
                                    Margin="0,2,0,0"
                                    FontSize="11"
                                    Opacity="0.6"
                                    Text="{Binding Source={StaticResource Strings}, Path=[logs_available_hint], Mode=OneWay}"
                                    TextWrapping="Wrap" />
                                <Separator Margin="0,12,0,12" />
                            </StackPanel>

                            <ui:ListView
                                Grid.Row="1"
                                ItemsSource="{Binding Days}"
                                ScrollViewer.VerticalScrollBarVisibility="Visible"
                                SelectedItem="{Binding SelectedDay, Mode=TwoWay}">
                                <ui:ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="8,8">
                                            <StackPanel Orientation="Horizontal">
                                                <ui:SymbolIcon
                                                    Margin="0,0,6,0"
                                                    FontSize="14"
                                                    Symbol="Calendar24" />
                                                <TextBlock FontWeight="SemiBold" Text="{Binding}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ui:ListView.ItemTemplate>
                            </ui:ListView>
                        </Grid>
                    </ui:Card>
                </StackPanel>
            </ScrollViewer>

            <!--  RIGHT COLUMN: LOG VIEWER  -->
            <ui:Card
                Grid.Column="2"
                Padding="16"
                VerticalAlignment="Top">
                <Grid VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  HEADER INFO  -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,12">
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="{Binding Source={StaticResource Strings}, Path=[logs_content_title], Mode=OneWay}" />
                        <TextBlock
                            Margin="0,6,0,0"
                            FontSize="11"
                            Opacity="0.6"
                            Text="{Binding Header}"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <!--  SEARCH  -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,12">
                        <ui:TextBox
                            Icon="{ui:SymbolIcon Symbol=Search24}"
                            PlaceholderText="{Binding Source={StaticResource Strings}, Path=[logs_search_placeholder], Mode=OneWay}"
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock
                            Margin="0,6,0,0"
                            FontSize="10"
                            Opacity="0.7"
                            Text="{Binding SearchMatchText}"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <!--  LOADING STATE  -->
                    <Grid Grid.Row="2" VerticalAlignment="Center">
                        <ui:ProgressRing
                            Width="48"
                            Height="48"
                            HorizontalAlignment="Center"
                            IsIndeterminate="True"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </Grid>

                    <!--  LOG TEXT VIEWER  -->
                    <ScrollViewer
                        Grid.Row="2"
                        VerticalAlignment="Stretch"
                        CanContentScroll="False"
                        HorizontalScrollBarVisibility="Auto"
                        VerticalScrollBarVisibility="Auto"
                        Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <TextBox
                            Padding="0"
                            VerticalContentAlignment="Top"
                            AcceptsReturn="True"
                            Background="Transparent"
                            BorderThickness="0"
                            FontFamily="Consolas"
                            FontSize="11"
                            IsReadOnly="True"
                            Text="{Binding LogText}"
                            TextWrapping="NoWrap" />
                    </ScrollViewer>
                </Grid>
            </ui:Card>
        </Grid>
    </Grid>
</Page>
