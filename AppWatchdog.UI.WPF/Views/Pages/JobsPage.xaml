<Page
    x:Class="AppWatchdog.UI.WPF.Views.Pages.JobsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:loc="clr-namespace:AppWatchdog.UI.WPF.Localization"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:AppWatchdog.UI.WPF.ViewModels"
    Title="{Binding Source={StaticResource Strings}, Path=[jobs_title]}">

    <Page.DataContext>
        <vm:JobsViewModel />
    </Page.DataContext>

    <Grid>
        <StackPanel Margin="16">

            <!--  Header  -->
            <ui:Card Margin="0,0,0,12" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock
                            FontSize="20"
                            FontWeight="SemiBold"
                            Text="{Binding Source={StaticResource Strings}, Path=[jobs_live_title]}" />

                        <TextBlock Opacity="0.7" Text="{Binding Source={StaticResource Strings}, Path=[jobs_live_description]}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <ui:ProgressRing
                            Width="18"
                            Height="18"
                            IsIndeterminate="True"
                            Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </StackPanel>
                </Grid>
            </ui:Card>

            <!--  Job Cards  -->
            <ItemsControl ItemsSource="{Binding Jobs}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>

                        <ui:Card Margin="0,0,0,12" Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--  Top  -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Text="{Binding AppName}" />
                                        <TextBlock Opacity="0.6" Text="{Binding JobType}" />
                                    </StackPanel>

                                    <Border
                                        Grid.Column="1"
                                        Height="30"
                                        Padding="8,4"
                                        Background="{Binding StateBrush}"
                                        CornerRadius="6">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            Text="{Binding State}" />
                                    </Border>
                                </Grid>

                                <!--  Details  -->
                                <Grid Grid.Row="1" Margin="0,12,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock Opacity="0.6" Text="Last check" />
                                        <TextBlock Text="{Binding LastCheck}" />
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Opacity="0.6" Text="Next run" />
                                        <TextBlock Text="{Binding NextRun}" />
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Opacity="0.6" Text="Stats" />
                                        <TextBlock Text="{Binding Stats}" />

                                        <!--  Ping  -->
                                        <TextBlock
                                            Margin="0,6,0,0"
                                            Opacity="0.6"
                                            Text="Ping"
                                            Visibility="{Binding HasPing, Converter={StaticResource BoolToVisibilityConverter}}" />

                                        <TextBlock
                                            FontWeight="SemiBold"
                                            Foreground="{Binding PingBrush}"
                                            Text="{Binding PingText}"
                                            Visibility="{Binding HasPing, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    </StackPanel>

                                </Grid>
                            </Grid>
                        </ui:Card>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </Grid>
</Page>
