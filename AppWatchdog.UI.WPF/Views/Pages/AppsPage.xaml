<Page
    x:Class="AppWatchdog.UI.WPF.Views.Pages.AppsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:AppWatchdog.UI.WPF.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d">

    <Grid IsEnabled="{Binding IsContentEnabled}">
        <StackPanel Margin="16">


            <ui:Card
                Height="154"
                Margin="0,0,0,12"
                Padding="0">
                <Grid>

                    <Image Source="pack://application:,,,/Images/banner5.png" Stretch="UniformToFill" />

                    <Rectangle>
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0.0" Color="#AA000000" />
                                <GradientStop Offset="1.0" Color="#AA000000" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <StackPanel Margin="24,36,24,36" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="26"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="AppWatchdog" />

                        <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,12,0"
                                Foreground="#E5E7EB"
                                Text="天網恢恢、疎にして漏らさず" />
                        </StackPanel>
                    </StackPanel>

                </Grid>
            </ui:Card>


            <ui:Card Margin="0,0,0,16">


                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Überwachung Einstellungen" />

                    <TextBlock
                        Margin="0,4,0,0"
                        Opacity="0.7"
                        Text="{Binding HintText}" />


                    <WrapPanel Margin="0,20,0,0">
                        <ui:Button
                            Margin="0,0,8,0"
                            Command="{Binding ReloadCommand}"
                            Content="Neu laden"
                            Icon="{ui:SymbolIcon Symbol=SparkleCircle24}" />

                        <ui:Button
                            Appearance="Primary"
                            Command="{Binding SaveCommand}"
                            Content="Speichern"
                            Icon="{ui:SymbolIcon Symbol=Save24}"
                            IsEnabled="{Binding IsDirty}" />



                    </WrapPanel>

                    <TextBlock
                        Margin="0,4,0,0"
                        HorizontalAlignment="Right"
                        FontFamily="Consolas"
                        Foreground="NavajoWhite"
                        Text="{Binding SaveStateText}" />
                </StackPanel>

            </ui:Card>

            <ui:Card Margin="0,0,0,16">
                <Grid Margin="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="260" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,0,8"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="Allgemeine Überwachung" />


                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="Prüfintervall (Minuten)" />

                    <ui:NumberBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="120"
                        HorizontalAlignment="Right"
                        Maximum="1440"
                        Minimum="1"
                        Value="{Binding CheckIntervalMinutes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />


                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="0,8,0,0"
                        VerticalAlignment="Center"
                        Text="Mail-Intervall (Stunden)" />

                    <ui:NumberBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Width="120"
                        Margin="0,8,0,0"
                        HorizontalAlignment="Right"
                        Maximum="168"
                        Minimum="0"
                        Value="{Binding MailIntervalHours, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </ui:Card>


            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>


                <ui:Card Grid.Column="0" VerticalAlignment="Top">
                    <StackPanel>

                        <TextBlock
                            DockPanel.Dock="Left"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Überwachte Anwendungen" />

                        <TextBlock
                            Margin="0,5,0,5"
                            DockPanel.Dock="Left"
                            FontFamily="Consolas"
                            FontSize="11"
                            FontWeight="Regular"
                            Opacity="0.7"
                            Text="Doppelklick um Job-Bezeichnung zu ändern." />


                        <WrapPanel
                            Margin="10,10,5,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">

                            <ui:Button
                                Margin="0,0,8,0"
                                Appearance="Primary"
                                Command="{Binding AddCommand}"
                                Content="Neu"
                                Icon="{ui:SymbolIcon Symbol=Add24}" />

                            <ui:Button
                                Appearance="Secondary"
                                Command="{Binding RemoveCommand}"
                                Content="Löschen"
                                Icon="{ui:SymbolIcon Symbol=Delete24}"
                                IsEnabled="{Binding SelectedApp}" />
                        </WrapPanel>
                        <Separator Margin="0,5" />

                        <ui:ListView
                            Height="317"
                            VerticalContentAlignment="Top"
                            ItemsSource="{Binding Apps}"
                            MouseDoubleClick="AppsListView_MouseDoubleClick"
                            ScrollViewer.CanContentScroll="False"
                            ScrollViewer.VerticalScrollBarVisibility="Visible"
                            SelectedItem="{Binding SelectedApp}">

                            <ui:ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Padding="10,10" Text="{Binding Name}" />
                                </DataTemplate>
                            </ui:ListView.ItemTemplate>

                        </ui:ListView>

                    </StackPanel>
                </ui:Card>



                <ui:Card Grid.Column="2" VerticalAlignment="Top">
                    <ScrollViewer>
                        <StackPanel Margin="0" DataContext="{Binding SelectedApp}">


                            <TextBlock
                                Margin="0,0,0,12"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Überwachung" />


                            <ui:ToggleSwitch Content="Überwachung aktivieren" IsChecked="{Binding Enabled, Mode=TwoWay}" />


                            <StackPanel Margin="0,12,0,0" IsEnabled="{Binding Enabled}">

                                <TextBlock Text="Pfad zur EXE" />

                                <Grid Margin="0,4,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <ui:TextBox Grid.Column="0" Text="{Binding ExePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                    <ui:Button
                                        Grid.Column="2"
                                        Command="{Binding BrowseExeCommand}"
                                        Icon="{ui:SymbolIcon Symbol=Folder24}"
                                        ToolTip="EXE auswählen" />
                                </Grid>

                                <TextBlock Text="Argumente (Ex.: --Version)" />
                                <ui:TextBox Margin="0,4,0,0" Text="{Binding Arguments, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            </StackPanel>


                            <ui:ToggleSwitch
                                Margin="0,12,0,0"
                                Content="Uptime Kuma-Uptime aktivieren"
                                IsChecked="{Binding KumaEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding Enabled}" />


                            <StackPanel Margin="0,12,0,0" IsEnabled="{Binding KumaEnabled}">

                                <TextBlock Text="Base URL (Ex.: https://url.com)" />
                                <ui:TextBox Margin="0,4,0,8" Text="{Binding KumaBaseUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock Text="Push Token (Ex.: 6GfiFklRVHzWmjKUAyCyDXdVOmgrUi5L) " />
                                <ui:TextBox Margin="0,4,0,8" Text="{Binding KumaPushToken, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock Text="Ping-Intervall (Ex.: 60 Sekunden)" />
                                <ui:NumberBox
                                    Margin="0,4,0,0"
                                    Maximum="3600"
                                    Minimum="10"
                                    Value="{Binding KumaIntervalSeconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>

                        </StackPanel>
                    </ScrollViewer>
                </ui:Card>

            </Grid>

        </StackPanel>
    </Grid>
</Page>
