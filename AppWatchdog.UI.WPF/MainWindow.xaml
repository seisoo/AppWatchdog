<ui:FluentWindow
    x:Class="AppWatchdog.UI.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppWatchdog.UI.WPF"
    xmlns:pages="clr-namespace:AppWatchdog.UI.WPF.Views.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="AppWatchdog - Control Center"
    Width="1200"
    Height="1080"
    MinWidth="1024"
    MinHeight="1080"
    ui:Background="DarkSlateBlue"
    ExtendsContentIntoTitleBar="True"
    Icon="/Images/ico.png"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Title="AppWatchdog - Control Center"
            Grid.Row="0"
            ShowClose="True"
            ShowMaximize="True"
            ShowMinimize="True">
            <ui:TitleBar.Icon>
                <ui:ImageIcon
                    Width="16"
                    Height="16"
                    Source="/Images/ico.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <!--  BANNER  -->
        <ui:Card
            Grid.Row="1"
            Height="154"
            Margin="0,-8,0,8"
            Padding="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Image Source="pack://application:,,,/Images/banner5.png" Stretch="UniformToFill" />

                <Rectangle>
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Offset="0.0" Color="#AA000000" />
                            <GradientStop Offset="1.0" Color="#AA000000" />
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <StackPanel Margin="24,36,24,36" VerticalAlignment="Center">
                    <TextBlock
                        FontSize="26"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="AppWatchdog" />

                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,12,0"
                            Foreground="#E5E7EB"
                            Text="天網恢恢、疎にして漏らさず" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ui:Card>

        <ui:ContentDialogHost
            x:Name="RootContentDialogHost"
            Grid.RowSpan="3"
            Panel.ZIndex="999" />

        <!--  Snackbar Layer  -->
        <ui:SnackbarPresenter
            x:Name="SnackbarPresenter"
            Grid.RowSpan="3"
            Margin="0,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Panel.ZIndex="999" />

        <ui:NavigationView
            x:Name="RootNavigationView"
            Grid.Row="2"
            IsBackButtonVisible="Collapsed"
            IsFooterSeparatorVisible="False"
            IsPaneOpen="True"
            IsPaneToggleVisible="True"
            IsTopSeparatorVisible="False"
            OpenPaneLength="80"
            PaneDisplayMode="LeftFluent">

            <ui:NavigationView.PaneFooter>
                <StackPanel Margin="3,0,0,8">

                    <ComboBox
                        IsEnabled="{Binding BackendState.IsReady}"
                        ItemsSource="{Binding LanguageSelector.Languages}"
                        SelectedItem="{Binding LanguageSelector.SelectedLanguage, Mode=TwoWay}">

                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Image
                                    Width="24"
                                    Height="16"
                                    Source="{Binding Flag}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </ui:NavigationView.PaneFooter>


            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    Content="Service"
                    Icon="{ui:SymbolIcon Shield24}"
                    TargetPageType="{x:Type pages:ServicePage}" />

                <ui:NavigationViewItem
                    Content="Jobs"
                    Icon="{ui:SymbolIcon PersonWalking24}"
                    TargetPageType="{x:Type pages:JobsPage}" />

                <ui:NavigationViewItem
                    Content="Apps"
                    Icon="{ui:SymbolIcon AppFolder24}"
                    TargetPageType="{x:Type pages:AppsPage}" />

                <ui:NavigationViewItem
                    Content="Backups"
                    Icon="{ui:SymbolIcon Symbol=Save24}"
                    TargetPageType="{x:Type pages:BackupPage}" />

                <ui:NavigationViewItem
                    Content="Restore"
                    Icon="{ui:SymbolIcon Symbol=ArrowUpload24}"
                    TargetPageType="{x:Type pages:RestorePage}" />

                <ui:NavigationViewItem
                    Content="Alerts"
                    Icon="{ui:SymbolIcon Megaphone24}"
                    TargetPageType="{x:Type pages:NotificationsPage}" />

                <ui:NavigationViewItem
                    Content="Logs"
                    Icon="{ui:SymbolIcon DocumentText24}"
                    TargetPageType="{x:Type pages:LogsPage}" />
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem
                    Content="About"
                    Icon="{ui:SymbolIcon Info24}"
                    TargetPageType="{x:Type pages:AboutPage}" />
            </ui:NavigationView.FooterMenuItems>

        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
